<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/currtab_self_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D0D0D0"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="49px"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#808080"></LinearLayout>

            <LinearLayout
                android:id="@+id/bg_self_week1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/curr_self_week1"
                    style="@style/course_tab"
                    android:text="@string/weekday3" />

                <TextView
                    android:id="@+id/curr_self_date01"
                    style="@style/course_tab" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="#808080"></LinearLayout>

            <LinearLayout
                android:id="@+id/bg_self_week2"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/curr_self_week2"
                    style="@style/course_tab"
                    android:text="@string/weekday2" />

                <TextView
                    android:id="@+id/curr_self_date02"
                    style="@style/course_tab" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="#808080"></LinearLayout>

            <LinearLayout
                android:id="@+id/bg_self_week3"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/curr_self_week3"
                    style="@style/course_tab"
                    android:text="@string/weekday3" />

                <TextView
                    android:id="@+id/curr_self_date03"
                    style="@style/course_tab" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="#808080"></LinearLayout>

            <LinearLayout
                android:id="@+id/bg_self_week4"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/curr_self_week4"
                    style="@style/course_tab"
                    android:text="@string/weekday4" />

                <TextView
                    android:id="@+id/curr_self_date04"
                    style="@style/course_tab" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="#808080"></LinearLayout>

            <LinearLayout
                android:id="@+id/bg_self_week5"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/curr_self_week5"
                    style="@style/course_tab"
                    android:text="@string/weekday5" />

                <TextView
                    android:id="@+id/curr_self_date05"
                    style="@style/course_tab" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="#808080"></LinearLayout>

            <LinearLayout
                android:id="@+id/bg_self_week6"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/curr_self_week6"
                    style="@style/course_tab"
                    android:text="@string/weekday6" />

                <TextView
                    android:id="@+id/curr_self_date06"
                    style="@style/course_tab" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="#808080"></LinearLayout>

            <LinearLayout
                android:id="@+id/bg_self_week7"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/curr_self_week7"
                    style="@style/course_tab"
                    android:text="@string/weekday7" />

                <TextView
                    android:id="@+id/curr_self_date07"
                    style="@style/course_tab" />
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:id="@+id/curr_self_scroll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/currself_layout_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"></LinearLayout>

                <GridView
                    android:id="@+id/currself_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numColumns="7" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_curr_self"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</FrameLayout>