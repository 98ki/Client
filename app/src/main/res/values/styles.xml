    <style name="NavPage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <!-- <item name="android:background">@drawable/nav_page</item> -->
        <item name="android:background">@color/navpage</item>
    </style>

    <!-- Scroll image progress bar style -->
    <style name="ProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal" />

    <!-- 课程表tab -->
    <style name="course_tab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_2</item>
        <item name="android:textSize">@dimen/week_name</item>
